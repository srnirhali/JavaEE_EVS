<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <!--
            specifying the resource-bundle in this config file enables
            code completion in NetBeans xhtml editor,
            whereas f:loadbundle does not
            -->
            <base-name>echo.evs.web.i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>homepage</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/homepage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editpoll</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/organizer/edit_poll.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/organizer/edit_poll.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>organizerpage</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/organizer/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminpage</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/admin/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>pollresults</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/organizer/poll_results.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>participantlist</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/organizer/participant_list.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>editparticipantlist</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/organizer/participant_list_edit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>voting</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/participant/voting.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>votingresult</from-outcome>
            <redirect>true</redirect>
            <to-view-id>/pages/participant/voting_result.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>



